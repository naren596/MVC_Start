@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Complaint Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/nav.js" type="module"></script>
    <script src="~/js/complaint-details.js" type="module"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <script type="module">
        import { renderComplaintOverview } from '@Url.Content("~/js/complaint-details.js")';
        (function () {
          const id = '@ViewBag.ComplaintId' !== '' ? '@ViewBag.ComplaintId' : null;
          renderComplaintOverview(id);
        })();
    </script>

    <div class="complaint-details-section" id="complaintOverviewSection"></div>
  </body>
</html>
