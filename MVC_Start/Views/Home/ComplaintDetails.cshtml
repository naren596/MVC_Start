@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MVC_Start.Models.Complaint
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Complaint Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/nav.js" type="module"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="complaint-details-section" id="complaintOverviewSection">
        @if (Model != null)
        {
            <div class="row pt-2">
                <div class="col-sm-9 offset-1">
                    <div class="row">
                        <div class="col company-overview-title text-warning h1">@Model.IssueName</div>
                    </div>
                    <div class="row text-white">
                        <div class="col complaint-overview-details h6">@(Model.ComplaintWhatHappened ?? string.Empty)</div>
                    </div>
                </div>
            </div>
            <div class="row py-1">
              <div class="row text-white">
                <div class="col-5 offset-1">
                  <div class="row py-1"><div class="col"> <strong>Company</strong>: @(Model.Company?.Name ?? string.Empty) </div></div>
                  <div class="row py-1"><div class="col"> <strong>Product</strong>: @(Model.SubProduct?.Product?.Name ?? string.Empty) </div></div>
                  <div class="row py-1"><div class="col"> <strong>Sub Product</strong>: @(Model.SubProduct.Name ?? string.Empty) </div></div>
                  <div class="row py-1"><div class="col"> <strong>Submitted Via</strong>: @(Model.SubmittedVia ?? "NA") </div></div>
                  <div class="row py-1"><div class="col"> <strong>Consumer Disputed</strong>: @(Model.ConsumerDisputed ?? "NA") </div></div>
                  <div class="row py-1"><div class="col"> <strong>Consumer Consent</strong>: @(Model.ConsumerConsentProvided ?? "NA") </div></div>
                  <div class="row py-1"><div class="col"> <strong>Timely </strong>: @(Model.Timely ?? "NA") </div></div>
                  <div class="row py-1"><div class="col"> <strong>State</strong>: @(Model.State ?? "NA") </div></div>
                  <div class="row py-1"><div class="col"> <strong>Zip Code</strong>: @(Model.ZipCode ?? "NA") </div></div>
                </div>
                <div class="col">
                  <div class="row py-1"><div class="col"> <strong>Date Received</strong>: @(Model.DateReceived.ToString("MM/dd/yyyy") ?? string.Empty) </div></div>
                  <div class="row py-1"><div class="col"> <strong>Date Sent</strong>: @(Model.DateSentToCompany.ToString("MM/dd/yyyy") ?? string.Empty) </div></div>
                </div>
              </div>
              <div class="row text-white py-1">
                <div class="col offset-1 complaint-overview-details"><strong>Company Response</strong>: @(Model.CompanyResponse ?? "No Response") </div>
              </div>
              <div class="row py-2">
                <div class="col-2 offset-1"><a asp-action="EditComplaint" asp-route-id="@Model.ComplaintId" class="btn btn-primary">Update</a></div>
              </div>
            </div>
        }
        else
        {
            <div class="row pt-2 text-white">
                <p><strong> Please visit <a href="@Url.Action("Complaints", "Home")" class="text-warning">Complaints</a> page to select a complaint for details</strong></p>
            </div>
        }
    </div>
  </body>
</html>
