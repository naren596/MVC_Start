@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MVC_Start.Models.Complaint
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/nav.js" type="module"></script>
    <script src="~/js/submit.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <script type="module"></script>

    <div class="container mt-5 text-white">
      @if (Model != null)
      {
        <div class="col-6">
            <h3>Edit Complaint</h3>
            <form id="complaint-form" class="text-white" asp-controller="Home" asp-action="Edit" method="post" asp-route-id="@Model.ComplaintId">
                <input type="hidden" asp-for="ComplaintId" />
                <div class="form-group py-2">
                    <label for="issue" class="fw-bold">Issue:</label>
                    <input asp-for="IssueName" type="text" class="form-control bg-dark text-white" id="issue" required>
                </div>
                <div class="form-group py-2">
                    <label for="description" class="fw-bold">Complaint what happened:</label>
                    <textarea asp-for="ComplaintWhatHappened" class="form-control bg-dark text-white" id="description" rows="10" required></textarea>
                </div>
                <div class="form-group py-2">
                    <label for="state" class="fw-bold">State:</label>
                    <input asp-for="State" type="text" class="form-control bg-dark text-white" id="state" required>
                </div>
                <div class="form-group py-2">
                    <label for="zipcode" class="fw-bold">ZipCode:</label>
                    <input asp-for="ZipCode" type="text" class="form-control bg-dark text-white" id="zipcode" required>
                </div>
                  <div class="form-group py-2">
                    <label for="response" class="fw-bold">Company Response:</label>
                    <input asp-for="CompanyResponse" type="text" class="form-control bg-dark text-white" id="response" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="ComplaintDetails" asp-route-id="@Model.ComplaintId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
      }
      else
      {
        <div class="col-6">
            <h3>Submit New Complaint</h3>
            <form id="complaint-form">
                <div class="form-group py-2">
                    <label for="issue", class="fw-bold">Issue:</label>
                    <input type="text" class="form-control bg-dark text-white" id="issue" required>
                </div>
                <div class="form-group py-2">
                    <label for="company", class="fw-bold">Company:</label>
                    <input type="text" class="form-control bg-dark text-white" id="company" required>
                </div>
                <div class="form-group py-2">
                    <label for="product", class="fw-bold">Product:</label>
                    <input type="text" class="form-control bg-dark text-white" id="product" required>
                </div>
                <div class="form-group py-2">
                    <label for="sub-product", class="fw-bold">Sub product:</label>
                    <input type="text" class="form-control bg-dark text-white" id="sub-product" required>
                </div>
                <div class="form-group py-2">
                    <label for="description", class="fw-bold">Complaint what happened:</label>
                    <textarea class="form-control bg-dark text-white" id="description" rows="10" required></textarea>
                </div>
                <div class="form-group py-2">
                    <label for="state", class="fw-bold">State:</label>
                    <input type="text" class="form-control bg-dark text-white" id="state" required>
                </div>
                <div class="form-group py-2">
                    <label for="zipcode", class="fw-bold">ZipCode:</label>
                    <input type="text" class="form-control bg-dark text-white" id="zipcode" required>
                </div>
                  <div class="form-group py-2">
                    <label for="response", class="fw-bold">Company Response:</label>
                    <input type="text" class="form-control bg-dark text-white" id="response" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
      }

    </div>
    <div class="modal fade" id="complaint-modal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content bg-dark">
              <div class="modal-header text-white">
                  <h5 class="modal-title">Complaint status</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body text-white">
                <p><strong>Issue:</strong> <span id="modal-issue"></span></p>
                <p><strong>Description:</strong><span id="modal-description"></span></p>
                <p class="text-success">Complaint has been updated/created!</p>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
          </div>
      </div>
    </div>
  </body>
</html>
